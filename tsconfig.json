{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017"],
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "build",
    "strict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["src/**/*", "test.ts"],
  "exclude": ["node_modules"]
}
